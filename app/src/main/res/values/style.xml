<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/primary_hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>

        <item name="android:background">@drawable/shape_edit_text</item>
    </style>


    <style name="edit_text_screen_add_word">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/primary_hint_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:padding">8dp</item>

        <item name="android:background">@drawable/shape_edit_text</item>
    </style>


    <style name="title_option_cards">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
  
    <style name="screen_titles_add_words">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="show_games_card_title">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="title_display_all_words">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="word_drawn_translate_game">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="translate_word_game_score_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="translate_word_game_score">
        <item name="android:textSize">55sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">-25dp</item>
        <item name="android:textColor">@color/secondary_principal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">10</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">4</item>
    </style>




</resources>